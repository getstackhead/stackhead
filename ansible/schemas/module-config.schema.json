{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "StackHead CLI config",
  "description": "StackHead CLI config file",
  "type": "object",
  "required": ["type"],
  "additionalProperties": false,
  "properties": {
    "type": {
      "$ref": "#/definitions/prop-type"
    },
    "terraform": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "provider": {
          "type": "object",
          "required": ["vendor", "name", "version", "resource_name"],
          "properties": {
            "vendor": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "version": {
              "type": "string"
            },
            "resource_name": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "prop-type": {
      "type": "string",
      "enum": ["container", "plugin", "webserver"]
    }
  },
  "allOf": [
    {
      "if": {"properties": {"type": {"const": "plugin"}}},
      "else": {
        "required": ["terraform"]
      }
    }
  ]
}
