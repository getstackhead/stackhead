{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "StackHead CLI config",
  "description": "StackHead CLI config file",
  "type": "object",
  "required": ["modules"],
  "properties": {
    "modules": {
      "type": "object",
      "required": ["webserver", "container"],
      "properties": {
        "webserver": {
          "type": "string"
        },
        "container": {
          "type": "string"
        },
        "dns": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "plugins": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "terraform": {
      "type": "object",
      "properties": {
        "update_interval": {
          "type": "string",
          "description": "Interval at which automated Terraform applies are performed. Format see Unix timer \"OnCalendar\""
        }
      }
    },
    "certificates": {
      "type": "object",
      "properties": {
        "register_email": {
          "type": "string",
          "description": "Email address used for registering SSL certificates via Lets Encrypt"
        }
      }
    }
  }
}
